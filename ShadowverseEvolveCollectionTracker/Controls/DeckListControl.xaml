<UserControl x:Class="ShadowverseEvolveCardTracker.Controls.DeckListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ShadowverseEvolveCardTracker.Converters"
             Background="Transparent">
    
    <UserControl.Resources>
        <conv:StringToImageSourceConverter x:Key="StringToImageConverter" />
    </UserControl.Resources>
    
    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource GoldBrush}"
                   Margin="0,0,0,4"/>

        <ListBox x:Name="PART_ListBox"
                 ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                 SelectionChanged="PART_ListBox_SelectionChanged"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemContainerStyle="{Binding ItemContainerStyle, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.ToolTip>
                            <ToolTip Placement="Mouse" Background="Transparent" BorderThickness="0" Padding="0" HasDropShadow="False">
                                <Border Background="transparent" Padding="0" CornerRadius="4" BorderBrush="Transparent" BorderThickness="0">
                                    <Image Source="{Binding Card.ImageFile, Converter={StaticResource StringToImageConverter}}"
                                           Width="240" Height="320" Stretch="Uniform"/>
                                </Border>
                            </ToolTip>
                        </Grid.ToolTip>

                        <TextBlock Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Text="{Binding Quantity}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource GoldBrush}"/>

                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Text=" x "
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,4,0"/>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding Card.Name}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"
                                   VerticalAlignment="Center"
                                   MinWidth="0"
                                   Margin="0,0,8,0"/>

                        <Button Grid.Column="3" Content="-" 
                                Command="{Binding DecreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Width="22" Height="20" Margin="0,0,4,0" Padding="0"/>

                        <Button Grid.Column="4" Content="+" 
                                Command="{Binding IncreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Width="22" Height="20" Padding="0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
