<UserControl x:Class="ShadowversEvolveCardTracker.Controls.CardViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ShadowversEvolveCardTracker.Converters">

    <UserControl.Resources>
        <conv:StringToImageSourceConverter x:Key="StringToImageConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Border BorderThickness="1" 
            BorderBrush="{DynamicResource AccentBrush}"
            Padding="8"
            Background="{DynamicResource SurfaceBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Image viewport with panning/zooming - constrained to Row 0 -->
            <Border x:Name="ViewerViewport"
                    Grid.Row="0"
                    ClipToBounds="True"
                    Background="Transparent"
                    Tag="{Binding ElementName=ViewerImage}"
                    MouseWheel="ViewerImage_MouseWheel"
                    MouseLeftButtonDown="ViewerImage_MouseLeftButtonDown"
                    MouseLeftButtonUp="ViewerImage_MouseLeftButtonUp"
                    MouseMove="ViewerImage_MouseMove"
                    MouseRightButtonDown="ViewerImage_MouseRightButtonDown">
                <Image x:Name="ViewerImage"
                       Stretch="Uniform"
                       Source="{Binding CurrentImage, Converter={StaticResource StringToImageConverter}}"
                       RenderTransformOrigin="0,0">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                            <TranslateTransform X="0" Y="0"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>

            <!-- Navigation buttons - shown only when there are multiple images -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,8,0,0"
                        Background="{DynamicResource SurfaceBrush}"
                        Visibility="{Binding ShowNavigation, Converter={StaticResource BoolToVisConverter}}">
                <Button Content="← Prev" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding PrevImageCommand}" />
                <TextBlock VerticalAlignment="Center" 
                           Margin="8,0"
                           Foreground="{DynamicResource GoldBrush}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="CurrentIndexDisplay" />
                            <Binding Path="ImageCount" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Button Content="Next →" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding NextImageCommand}" />
            </StackPanel>

            <!-- Info and Reset button -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="0,8,0,0"
                        Background="{DynamicResource SurfaceBrush}">
                <TextBlock Text="{Binding CardName}" 
                           FontWeight="SemiBold" 
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource GoldBrush}"/>
                <Button Content="Reset" 
                        Padding="6,3" 
                        Margin="12,0,0,0" 
                        Click="Reset_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>