<UserControl x:Class="ShadowverseEvolveCardTracker.Controls.CardViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ShadowverseEvolveCardTracker.Converters">

    <UserControl.Resources>
        <conv:StringToImageSourceConverter x:Key="StringToImageConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter" />
    </UserControl.Resources>

    <Border BorderThickness="1" 
            BorderBrush="{DynamicResource AccentBrush}"
            Padding="8"
            Background="{DynamicResource SurfaceBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Image viewport with panning/zooming - constrained to Row 0 -->
            <Border x:Name="ViewerViewport"
                    Grid.Row="0"
                    ClipToBounds="True"
                    Background="Transparent"
                    Tag="{Binding ElementName=ViewerImage}"
                    MouseWheel="ViewerImage_MouseWheel"
                    MouseLeftButtonDown="ViewerImage_MouseLeftButtonDown"
                    MouseLeftButtonUp="ViewerImage_MouseLeftButtonUp"
                    MouseMove="ViewerImage_MouseMove"
                    MouseRightButtonDown="ViewerImage_MouseRightButtonDown">
                <!-- Use a Grid inside the viewport so we can overlay the favorite toggle in the top-right -->
                <Grid>
                    <Image x:Name="ViewerImage"
                           Stretch="Uniform"
                           Source="{Binding CurrentImage, Converter={StaticResource StringToImageConverter}}"
                           RenderTransformOrigin="0,0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                <TranslateTransform X="0" Y="0"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                    <!-- Back button positioned at the top-left of the image viewport -->
                    <Button Command="{Binding BackCommand}"
                            Visibility="{Binding CanGoBack, Converter={StaticResource BoolToVisConverter}}"
                            Padding="0"
                            Margin="8,8,0,0"
                            Width="34"
                            Height="34"
                            Background="Transparent"
                            Cursor="Hand"
                            Focusable="False"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <!-- styled tooltip to match other tooltips in the app -->
                        <Button.ToolTip>
                            <ToolTip Placement="Mouse" Background="Transparent" BorderThickness="0" Padding="0" HasDropShadow="False">
                                <Border Background="{DynamicResource ElevatedBrush}"
                                        Padding="6"
                                        CornerRadius="4"
                                        BorderBrush="{DynamicResource AccentBrush}"
                                        BorderThickness="1">
                                    <TextBlock Text="Go back"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Border>
                            </ToolTip>
                        </Button.ToolTip>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Viewbox Width="18" Height="18">
                            <Canvas Width="24" Height="24">
                                <!-- simple left arrow -->
                                <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.8" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M15,6 L9,12 L15,18" Fill="Transparent"/>
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <!-- Favorite Toggle positioned at the top-right of the image viewport -->
                    <ToggleButton Padding="0"
                                  Margin="0,0,0,0"
                                  Width="34"
                                  Height="34"
                                  Background="Transparent"
                                  IsChecked="{Binding CurrentCard.IsFavorite, Mode=TwoWay}"
                                  Cursor="Hand"
                                  Focusable="False"
                                  OverridesDefaultStyle="True"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top">
                        <!-- themed tooltip - transparent ToolTip chrome -->
                        <ToggleButton.ToolTip>
                            <ToolTip Placement="Mouse" Background="Transparent" BorderThickness="0" Padding="0" HasDropShadow="False">
                                <Border Background="{DynamicResource ElevatedBrush}"
                                        Padding="6"
                                        CornerRadius="4"
                                        BorderBrush="{DynamicResource AccentBrush}"
                                        BorderThickness="1">
                                    <TextBlock Text="Toggle favorite"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </Border>
                            </ToolTip>
                        </ToggleButton.ToolTip>

                        <!-- Minimal template: no chrome, no focus visuals -->
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </ToggleButton.Template>

                        <Viewbox Width="25" Height="25">
                            <Canvas Width="24" Height="24">
                                <!-- Filled star, visible when ToggleButton.IsChecked == true -->
                                <Path Fill="{DynamicResource GoldBrush}"
                                      Data="M12,17.27 L18.18,21 L16.54,13.97 L22,9.24 L14.81,8.63 L12,2 L9.19,8.63 L2,9.24 L7.46,13.97 L5.82,21 z"
                                      Visibility="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource BoolToVisConverter}}"/>

                                <!-- Outline star, always visable -->
                                <Path Stroke="{DynamicResource GoldBrush}"
                                      Fill="Transparent"
                                      StrokeThickness="1.6"
                                      Data="M12,17.27 L18.18,21 L16.54,13.97 L22,9.24 L14.81,8.63 L12,2 L9.19,8.63 L2,9.24 L7.46,13.97 L5.82,21 z"
                                      Visibility="Visible"/>
                            </Canvas>
                        </Viewbox>
                    </ToggleButton>
                </Grid>
            </Border>

            <TextBlock x:Name="CardNameTextBlock"
                       Grid.Row="1"
                       Text="{Binding CardName}"
                       FontWeight="SemiBold"
                       FontSize="18"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource GoldBrush}" />

            <!-- Wishlist controls placed under the name -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0"
                        Background="Transparent">
                <Border Background="{DynamicResource ElevatedBrush}"
                        Padding="6"
                        CornerRadius="4"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <Button Content="−"
                                Width="26"
                                Height="24"
                                Padding="0"
                                Margin="0,0,6,0"
                                Command="{Binding DecreaseWishlistCommand}"
                                ToolTip="Decrease wishlist quantity"/>

                        <!-- Center column: label "Wishlist" above the numeric quantity -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0">
                            <TextBlock Text="Wishlist"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock VerticalAlignment="Center"
                                       Foreground="{DynamicResource GoldBrush}"
                                       FontWeight="SemiBold"
                                       Text="{Binding WishlistQuantity}"
                                       Width="26"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <Button Content="+"
                                Width="26"
                                Height="24"
                                Padding="0"
                                Margin="6,0,0,0"
                                Command="{Binding IncreaseWishlistCommand}"
                                ToolTip="Increase wishlist quantity"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Related Cards + Versions buttons (responsive: wrap onto next line when space is tight) -->
            <Grid Grid.Row="3"
                  HorizontalAlignment="Center"
                  Margin="0,8,0,0"
                  MinWidth="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="0" /> <!-- spacer between buttons -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Command="{Binding ViewRelatedCardsCommand}"
                        Visibility="{Binding HasRelatedCards, Converter={StaticResource BoolToVisConverter}}"
                        Padding="6,3"
                        MinWidth="96"
                        Background="{DynamicResource ElevatedBrush}"
                        BorderBrush="{DynamicResource AccentBrush}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                        <Viewbox Width="14" Height="14" Margin="0,0,6,0">
                            <Canvas Width="20" Height="20">
                                <Ellipse Stroke="{DynamicResource GoldBrush}" StrokeThickness="2" Width="6" Height="6" Canvas.Left="1" Canvas.Top="1"/>
                                <Ellipse Stroke="{DynamicResource GoldBrush}" StrokeThickness="2" Width="6" Height="6" Canvas.Left="13" Canvas.Top="13"/>
                                <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="2" Data="M6,6 L14,14"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" FontSize="12">
                            <Run Text="View Related Cards (" />
                            <Run Text="{Binding RelatedCardsCount, Mode=OneWay}" />
                            <Run Text=")" />
                        </TextBlock>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Command="{Binding ViewVersionsCommand}"
                        Visibility="{Binding HasOtherVersions, Converter={StaticResource BoolToVisConverter}}"
                        Padding="6,3"
                        MinWidth="96"
                        Background="{DynamicResource ElevatedBrush}"
                        BorderBrush="{DynamicResource AccentBrush}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                        <Viewbox Width="14" Height="14" Margin="0,0,6,0">
                            <Canvas Width="20" Height="20">
                                <Rectangle Stroke="{DynamicResource GoldBrush}" Fill="Transparent" StrokeThickness="1.6" Width="10" Height="14" Canvas.Left="2" Canvas.Top="2" RadiusX="2" RadiusY="2"/>
                                <Rectangle Stroke="{DynamicResource GoldBrush}" Fill="Transparent" StrokeThickness="1.6" Width="10" Height="14" Canvas.Left="6" Canvas.Top="6" RadiusX="2" RadiusY="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" FontSize="12">View All Versions</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Navigation buttons - shown only when there are multiple images -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,8,0,0"
                        Background="{DynamicResource SurfaceBrush}"
                        Visibility="{Binding ShowNavigation, Converter={StaticResource BoolToVisConverter}}">
                <Button Content="← Prev" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding PrevImageCommand}" />
                <TextBlock VerticalAlignment="Center" 
                           Margin="8,0"
                           Foreground="{DynamicResource GoldBrush}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="CurrentIndexDisplay" />
                            <Binding Path="ImageCount" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Button Content="Next →" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding NextImageCommand}" />
            </StackPanel>

            <!-- Reset control remains at bottom-right of the control -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom"
                        Margin="0,8,0,0"
                        Background="Transparent"
                        HorizontalAlignment="Right">
                <Button Padding="6" 
                        Margin="12,0,0,0" 
                        Background="Transparent"
                        Click="Reset_Click">
                    <!-- themed tooltip - remove default chrome by making ToolTip transparent -->
                    <Button.ToolTip>
                        <ToolTip Placement="Mouse" Background="Transparent" BorderThickness="0" Padding="0" HasDropShadow="False">
                            <Border Background="{DynamicResource ElevatedBrush}"
                                    Padding="6"
                                    CornerRadius="4"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    BorderThickness="1">
                                <TextBlock Text="Reset zoom"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                        </ToolTip>
                    </Button.ToolTip>

                    <Viewbox Width="18" Height="18">
                        <Canvas Width="24" Height="24">
                            <!-- shafts from center to corners -->
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M12,12 L4,4 M12,12 L20,4 M12,12 L20,20 M12,12 L4,20" />
                            <!-- arrowheads at corners -->
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M8,4 L4,4 L4,8" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M16,4 L20,4 L20,8" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M20,16 L20,20 L16,20" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M8,20 L4,20 L4,16" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>