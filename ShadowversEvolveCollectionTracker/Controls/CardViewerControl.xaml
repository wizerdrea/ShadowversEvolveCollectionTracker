<UserControl x:Class="ShadowversEvolveCardTracker.Controls.CardViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ShadowversEvolveCardTracker.Converters">

    <UserControl.Resources>
        <conv:StringToImageSourceConverter x:Key="StringToImageConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Border BorderThickness="1" 
            BorderBrush="{DynamicResource AccentBrush}"
            Padding="8"
            Background="{DynamicResource SurfaceBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Image viewport with panning/zooming - constrained to Row 0 -->
            <Border x:Name="ViewerViewport"
                    Grid.Row="0"
                    ClipToBounds="True"
                    Background="Transparent"
                    Tag="{Binding ElementName=ViewerImage}"
                    MouseWheel="ViewerImage_MouseWheel"
                    MouseLeftButtonDown="ViewerImage_MouseLeftButtonDown"
                    MouseLeftButtonUp="ViewerImage_MouseLeftButtonUp"
                    MouseMove="ViewerImage_MouseMove"
                    MouseRightButtonDown="ViewerImage_MouseRightButtonDown">
                <Image x:Name="ViewerImage"
                       Stretch="Uniform"
                       Source="{Binding CurrentImage, Converter={StaticResource StringToImageConverter}}"
                       RenderTransformOrigin="0,0">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                            <TranslateTransform X="0" Y="0"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Border>

            <TextBlock x:Name="CardNameTextBlock"
                       Grid.Row="1"
                       Text="{Binding CardName}"
                       FontWeight="SemiBold"
                       FontSize="18"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"
                       Foreground="{DynamicResource GoldBrush}" />

            <!-- Navigation buttons - shown only when there are multiple images -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,8,0,0"
                        Background="{DynamicResource SurfaceBrush}"
                        Visibility="{Binding ShowNavigation, Converter={StaticResource BoolToVisConverter}}"
                        >
                <Button Content="← Prev" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding PrevImageCommand}" />
                <TextBlock VerticalAlignment="Center" 
                           Margin="8,0"
                           Foreground="{DynamicResource GoldBrush}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} / {1}">
                            <Binding Path="CurrentIndexDisplay" />
                            <Binding Path="ImageCount" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <Button Content="Next →" 
                        Padding="8,4" 
                        Margin="4,0"
                        Command="{Binding NextImageCommand}" />
            </StackPanel>

            <!-- Reset button (vector icon) -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom"
                        Margin="0,8,0,0"
                        Background="Transparent"
                        HorizontalAlignment="Right">
                <Button Padding="6" 
                        Margin="12,0,0,0" 
                        Background="Transparent"
                        Click="Reset_Click"
                        ToolTip="Reset zoom">
                    <Viewbox Width="18" Height="18">
                        <Canvas Width="24" Height="24">
                            <!-- shafts from center to corners -->
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M12,12 L4,4 M12,12 L20,4 M12,12 L20,20 M12,12 L4,20" />
                            <!-- arrowheads at corners -->
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M8,4 L4,4 L4,8" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M16,4 L20,4 L20,8" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M20,16 L20,20 L16,20" />
                            <Path Stroke="{DynamicResource GoldBrush}" StrokeThickness="1.6" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Data="M8,20 L4,20 L4,16" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>